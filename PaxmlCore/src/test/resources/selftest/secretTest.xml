<scenario>
    
    <secret id="s1" name="x">100</secret>
    <assert expected="100" actual="${s1}" />
    
    <secret id="s2" name="x"/>
    <assert expected="100" actual="${s2}" />
        
    <assert expected="100" actual="${util.getSecret('x')}" />
    
    <secret id="s3" >xyz</secret>
    <assert expected="xyz" actual="${s3}" />
    
    <secret id="s4" />
    <assert expected="xyz" actual="${s4}" />
    
    <assert expected="xyz" actual="${util.getSecret(null)}" />     
    
    <assertNull >
        <actual><secret name="whatever key"/></actual>
    </assertNull>  
    <assertNull actual="${util.getSecret('unknown key')}" />  
</scenario>
 