<scenario>
    <r id="obj">
        <li>li1</li>
        <li>li2</li>
        <a>va</a>            
        <b at="atv">vb</b>
        <c>
            <cc>1</cc>
        </c>
        <c>
            <cc>2.0</cc>
        </c>
        <d>
            <dd>d1</dd>
            <dd>d2</dd>
        </d>
    </r>
    
    <print>====</print>
    
    <toXml id="xml">${obj}</toXml>
    <print>${xml}</print>
        
    <toJson id="json">${obj}</toJson>
    <print>${json}</print>
    
    <assert expected="${obj}" strict="true">
        <actual><fromXml>${xml}</fromXml></actual>
    </assert>    
    
    <assert expected="${obj}" strict="true">
        <actual><fromJson>${json}</fromJson></actual>
    </assert>    
</scenario>
 