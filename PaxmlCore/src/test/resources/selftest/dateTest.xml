<scenario>
    
    <assert expected="20/12/2011" >
        <actual>
            <date toFormat="dd/MM/yyyy" >2011-12-20</date>    
        </actual>
    </assert>
    
    <assert expected="20/01/2022" >
        <actual>
            <date toFormat="dd/MM/yyyy" addYear="10" addMonth="1" >2011-12-20</date>    
        </actual>
    </assert>
    <assert expected="20/01/2002" >
        <actual>
            <date toFormat="dd/MM/yyyy" addYear="-10" addMonth="1" >2011-12-20</date>    
        </actual>
    </assert>
    <assert expected="29/02/2000" >
        <actual>
            <date toFormat="dd/MM/yyyy" addMonth="1" >2000-01-31</date>    
        </actual>
    </assert>
    <assert expected="28/02/2001" >
        <actual>
            <date toFormat="dd/MM/yyyy" addMonth="1" addYear="1" >2000-01-31</date>    
        </actual>
    </assert>
</scenario>

